    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowBackground">@color/colorWhite</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- The launcher theme. It sets the main window background to the launch_screen drawable -->

    <!--styles for app-->
    <!--df dialog-->

    <style name="viewParent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="viewParent.headerText">
        <item name="android:textColor">@color/contentTextColor</item>
        <item name="android:textSize">@dimen/headerTextSize</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="viewParent.headerText.NoMode">
        <item name="android:textColor">@color/darkTextColor</item>
    </style>

    <style name="parent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="modifiedEditText" parent="parent">
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="paddingStart">@dimen/_5sdp</item>
    </style>

    <style name="loginButton" parent="viewParent">
       <!-- <item name="android:background">@drawable/button_background_blue</item>-->
        <item name="android:textColor">@color/whiteTextColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="spinnerHintText" parent="parent">
        <item name="android:textSize">@dimen/newsMoreTextSize</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:paddingLeft">5dp</item>
    </style>


    <style name="CustomDropDownTilStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">#9797A2</item>
        <item name="boxStrokeColor">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="boxCornerRadiusBottomEnd">3dp</item>
        <item name="boxCornerRadiusBottomStart">3dp</item>
        <item name="boxCornerRadiusTopEnd">3dp</item>
        <item name="boxCornerRadiusTopStart">3dp</item>
    </style>


    <style name="AppTheme.ProgressDialog.Theme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:alertDialogStyle">@style/CustomAlertDialogStyle</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:layout_margin">0dp</item>
        <item name="colorAccent">@color/colorBlack</item>
    </style>
    <style name="CustomAlertDialogStyle">
        <item name="android:bottomBright">@color/colorWhite</item>
        <item name="android:bottomDark">@color/colorWhite</item>
        <item name="android:bottomMedium">@color/colorWhite</item>
        <item name="android:centerBright">@color/colorWhite</item>
        <item name="android:centerDark">@color/colorWhite</item>
        <item name="android:centerMedium">@color/colorWhite</item>
        <item name="android:fullBright">@drawable/progress_drawable</item>
        <item name="android:fullDark">@drawable/progress_drawable</item>
        <item name="android:topBright">@color/colorWhite</item>
        <item name="android:topDark">@color/colorWhite</item>
    </style>

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">#f5020202</item>
        <!-- Used for the background -->
        <item name="android:background">#ffffff</item>
    </style>

    <style name="TransparentView">
        <item name="background">@android:color/transparent</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />



    <style name="TextInputLayoutAppearance" parent="Widget.Design.TextInputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="hintTextAppearance">@style/HintText</item>
        <item name="errorTextAppearance">@style/ErrorText</item>
        <item name="android:textSize">@style/NormalText</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textColorHint">@color/colorGray</item>
        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>

    </style>

    <style name="ErrorText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorRed</item>
        <item name="android:textSize">@dimen/_10ssp</item>
    </style>

    <style name="HintText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">@dimen/_10ssp</item>
    </style>


    <style name="NormalText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

    <!-- Base library theme. -->
    <style name="CartCounterViewTheme" parent="DefaultBase">
        <!-- Customize your theme here. -->
        <item name="cc_is_animate_layout">true</item>
        <item name="cc_tv_background_drawable">@drawable/menu_addcart_count_rounded_square</item>
        <item name="cc_tv_background_color">?attr/colorAccent</item>
        <item name="cc_tv_text_color">@android:color/white</item>
        <item name="cc_layout_animation">@anim/bounce</item>
    </style>

    <!-- Base library theme. -->
    <style name="DefaultBase">
        <!-- No base settings for now -->
    </style>


</resources>
